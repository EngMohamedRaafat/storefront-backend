{
	"name": "storefront-backend",
	"version": "1.0.0",
	"main": "server.ts",
	"scripts": {
		"build": "npx tsc",
		"format": "prettier --config .prettierrc 'src/**/*.ts' --write",
		"jasmine": "jasmine",
		"lint": "eslint . --ext .ts",
		"start": "node dist/server.js",
		"watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
		"db-up": "db-migrate up",
		"db-down": "db-migrate down",
		"test": "db-migrate --env test up && ENV=test jasmine-ts && db-migrate --env test down",
		"tsc": "tsc",
		"dc-up": "docker-compose up -d",
		"dc-down": "docker-compose down"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EngMohamedRaafat/storefront-backend.git"
	},
	"author": "Mohamed Raafat",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/EngMohamedRaafat/storefront-backend/issues"
	},
	"homepage": "https://github.com/EngMohamedRaafat/storefront-backend#readme",
	"dependencies": {
		"bcrypt": "^5.0.1",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"db-migrate": "^0.11.13",
		"db-migrate-pg": "^1.2.2",
		"dotenv": "^16.0.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"pg": "^8.5.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.9",
		"@types/jasmine": "^3.6.4",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/morgan": "^1.9.3",
		"@types/pg": "^7.14.7",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"eslint": "^8.11.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jasmine": "^4.0.2",
		"jasmine-spec-reporter": "^7.0.0",
		"jasmine-ts": "^0.3.0",
		"prettier": "^2.6.0",
		"supertest": "^6.2.2",
		"ts-node": "^9.1.1",
		"tsc-watch": "^4.2.9",
		"typescript": "^4.1.3"
	}
}
